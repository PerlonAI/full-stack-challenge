{
	"name": "full-stack-challenge",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "biome check .",
		"format": "biome check --write .",
		"test": "vitest",
		"typecheck": "tsc --noEmit",
		"prepare": "simple-git-hooks"
	},
	"dependencies": {
		"clsx": "^2.1.1",
		"neverthrow": "^8.2.0",
		"next": "14.2.15",
		"react": "^18",
		"react-dom": "^18",
		"server-only": "^0.0.1",
		"valibot": "^1.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/node": "^20",
		"@types/react": "^18",
		"@types/react-dom": "^18",
		"eslint": "^8",
		"eslint-config-next": "14.2.15",
		"lint-staged": "^15.5.1",
		"postcss": "^8",
		"simple-git-hooks": "^2.12.1",
		"tailwindcss": "^3.4.1",
		"typescript": "^5",
		"vitest": "^3.1.1"
	},
	"simple-git-hooks": {
		"pre-commit": "bun lint-staged"
	},
	"lint-staged": {
		"*": ["biome check --write --no-errors-on-unmatched "],
		"*.{js,jsx,ts,tsx}": ["pnpm typecheck"]
	}
}
